<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00000000">

    <LinearLayout
        android:id="@id/player_top_status_bar_container"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:background="@color/play_control_alpha_black"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </RelativeLayout>
        <TextView
            android:id="@id/player_text_view_system_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="10:08"/>
        <cn.ikan.libs.player.widget.BatteryView
            android:id="@id/player_view_battery_value"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_marginRight="10dp"
            app:border_width="2dp"
            app:border_color="#ffffff"
            app:head_orientation="left"
            app:show_type="fill"
            app:progress_color="#ffffff"
            app:number_text_size="12sp"
            />
    </LinearLayout>

    <ProgressBar
        android:id="@id/player_loading_progress_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#11000000"
        android:layout_centerInParent="true"
        android:indeterminateBehavior="repeat"
        android:indeterminateOnly="true"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@id/player_bottom_controller_container"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@color/play_control_alpha_black"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@id/player_image_view_play_icon"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:paddingLeft="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_video_player_btn_pause"/>
        <SeekBar
            android:id="@id/player_seek_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxHeight="5dp"
            android:minHeight="5dp"
            android:splitTrack="false"
            android:progressDrawable="@drawable/style_video_player_video_seekbar"
            android:thumb="@drawable/selector_seek_bar_thumb"/>
        <TextView
            android:id="@id/player_text_view_all_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="00:00:00/00:00:00"/>
    </LinearLayout>

</RelativeLayout>